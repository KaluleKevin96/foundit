doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1")
        meta(http-equiv="X-UA-Compatible", content="ie=edge")

        link(rel="stylesheet" href="/css/bootstrap.min.css")
        link(rel="stylesheet" href="/css/fontawesome/css/all.css")
    
        link(href="/css/mycss.css" type="text/css" rel="stylesheet")

        title #{title}
    body
        nav.nav.navbar-expand-lg.navbar-light.top-navbar
            a.navbar-brand.mr-auto(href="/") LOST & FOUND
            
            button.navbar-toggler(type="button" data-toggle="collapse" data-target="#basicExampleNav" aria-controls="basicExampleNav" aria-expanded="false" aria-label="Toggle navigation")
                span.navbar-toggler-icon

            if (user)
                div.collapse.navbar-collapse.logged_in_user_dropdown#navbarSupportedContent
                    ul.navbar-nav.ml-auto
                        li.nav-item.dropdown
                            a.nav-link.dropdown-toggle.text-uppercase#navbarDropdown(role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false") #{user.last_name} #{user.first_name}
                            div.dropdown-menu(aria-labelledby="navbarDropdown")
                                a.dropdown-item(href="#")
                                    | Edit your profile &nbsp;
                                    i.fa.fa-edit                                    
                                a.dropdown-item(href="/administrators/admin_logout")
                                    | Logout &nbsp;
                                    i.fas.fa-sign-out-alt 
                                
                                    
            else if (poa)
                div.collapse.navbar-collapse.logged_in_user_dropdown#navbarSupportedContent
                    ul.navbar-nav.ml-auto
                        li.nav-item.dropdown
                            a.nav-link.dropdown-toggle#navbarDropdown(role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false") Some link
                            div.dropdown-menu(aria-labelledby="navbarDropdown")
                                a.dropdown-item(href="#") Link DropDown
            else
                button.btn.btn-primary(type="button" data-toggle="modal" data-target="#login_modal")
                    | P.O.A LOGIN

        div.modal.fade#login_modal(tabindex = "-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true")
            div.modal-dialog.modal-dialog-centered(role = "document")
                div.modal-content
                    div.modal-header
                        h5.modal-title#loginModalHeader POINT OF ACCESS LOGIN
                        button.close(type="button" data-dismiss="modal" aria-label="Close")
                            span(aria-hidden="true") &times;

                    div.modal-body
                        form.form.row.justify-content-center
                            div.col-md-8
                                div.form-group
                                    label(for = "username") Username or Email
                                    input.form-control(type="text" placeholder="Enter your username or Email")

                                div.form-group
                                    label(for="password") Password
                                    input.form-control(type="password")

                                div.form-group
                                    input.btn.btn-primary.btn-lg.mt-1.ml-5(type="submit" value="LOG IN")

                    div.modal-footer
                        p
                            |Forgot Password ? &nbsp;&nbsp;
                            a(href="") Reset here
                            

                        //- if (loggedin_user != undefined) 
                        //-     span.log_out_button.mr-auto.float-right 
                        //-         a.btn.btn-md.btn-outline-light(href="/logout") Log Out
                        
                        //- else
                        //-     span.empty-span
        
        if (user)
            div.row.button_menu.text-center
                div.col-md-2.col-2
                    a.btn.btn-md.btn-outline-dark(href="/administrators/register_administrator_form") Register New Administrator
                
                div.col-md-2.col-2
                    a.btn.btn-md.btn-outline-primary(href="/administrators/all_administrators") All Administrators

                div.col-md-2.col-2
                    a.btn.btn-md.btn-outline-success(href="/poa/register_poa_form") Register New Point Of Access
                
                div.col-md-2.col-2
                    a.btn.btn-md.btn-outline-info(href="/poa/all_poas") All Points of Access
        else if (poa)
            div.row.button_menu.text-center
                div.col-md-2.col-2
                    a.btn.btn-md.btn-outline-dark Register New Lost Item
                
                div.col-md-2.col-2
                    a.btn.btn-md.btn-outline-primary All Reported Items

                div.col-md-2.col-2
                    a.btn.btn-md.btn-outline-danger Lost Items
                
                div.col-md-2.col-2
                    a.btn.btn-md.btn-outline-success Found Items
        
                
        div.page_content.pt-4
            block content

        footer.footer.bg-secondary.pt-3.pb-3.text-center
            p.text-white.mt-2 Copyright &copy; The Hive Nodejs

        script(src="https://code.jquery.com/jquery-3.4.1.min.js" integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo=" crossorigin="anonymous" type="text/javascript")
        script(src="/js/popper.min.js" type="text/javascript")
        script(src="/js/bootstrap.min.js" type="text/javascript")

        script(type = "text/javascript").
            $(document).ready(function(){

                $(".custom-file-input").on("change", function() {
                var fileName = $(this).val().split("\\").pop();
                $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
                });

            });